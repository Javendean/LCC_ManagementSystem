{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Vite Dev Server",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "serverReadyAction": {
        "pattern": "Local:   (http://localhost:[0-9]+)",
        "uriFormat": "%s",
        "action": "openExternally"
      },
      "cwd": "${workspaceFolder}"
    }
  ]
}
