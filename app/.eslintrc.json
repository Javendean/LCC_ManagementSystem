{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:svelte/recommended",
    "prettier"
  ],
  "plugins": ["@typescript-eslint"],
  "ignorePatterns": ["*.cjs", "build/", ".svelte-kit/"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2021,
    "extraFileExtensions": [".svelte"]
  },
  "env": {
    "browser": true,
    "es2017": true,
    "node": true
  },
  "rules": {}
}
